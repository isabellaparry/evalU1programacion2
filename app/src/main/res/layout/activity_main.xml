<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtPrecioCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="203dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="96dp"
        android:text="Precio: $10.000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nroCtadCazuela"
        tools:textSize="16sp" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="323dp"
        android:layout_height="202dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logorest" />

    <ImageView
        android:id="@+id/imagePastelDeChoclo"
        android:layout_width="148dp"
        android:layout_height="105dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="284dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pasteldechoclo" />

    <TextView
        android:id="@+id/tituloPastelDeChoclo"
        android:layout_width="157dp"
        android:layout_height="24dp"
        android:layout_marginTop="283dp"
        android:layout_marginEnd="51dp"
        android:text="Pastel de choclo"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCtadPastelChoclo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="203dp"
        android:layout_marginTop="318dp"
        android:layout_marginEnd="152dp"
        android:text="Cantidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nroCtadPastelChoclo"
        android:layout_width="90dp"
        android:layout_height="56dp"
        android:layout_marginStart="263dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="58dp"
        android:hint="0"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tituloPastelDeChoclo" />

    <TextView
        android:id="@+id/txtPrecioPastelChoclo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="203dp"
        android:layout_marginEnd="96dp"
        android:text="Precio: $36.000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nroCtadPastelChoclo"
        tools:textSize="16sp" />

    <ImageView
        android:id="@+id/imageCazuela"
        android:layout_width="148dp"
        android:layout_height="103dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePastelDeChoclo"
        app:srcCompat="@drawable/cazuela" />

    <TextView
        android:id="@+id/tituloCazuela"
        android:layout_width="157dp"
        android:layout_height="24dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="56dp"
        android:text="Cazuela"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCtadCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="203dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="152dp"
        android:text="Cantidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloCazuela" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nroCtadCazuela"
        android:layout_width="89dp"
        android:layout_height="58dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="247dp"
        android:hint="0"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tituloCazuela"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="128dp"
        android:text="Comida:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="20sp" />

    <TextView
        android:id="@+id/nroComida"
        android:layout_width="165dp"
        android:layout_height="27dp"
        android:layout_marginStart="192dp"
        android:layout_marginBottom="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="20sp"
        tools:textStyle="bold" />

    <TextView
        android:id="@+id/txtPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="88dp"
        android:text="Propina"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="20sp" />

    <TextView
        android:id="@+id/nroPropina"
        android:layout_width="165dp"
        android:layout_height="27dp"
        android:layout_marginStart="188dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="20sp"
        tools:textStyle="bold" />

    <Switch
        android:id="@+id/switchPropina"
        android:layout_width="71dp"
        android:layout_height="57dp"
        android:layout_marginStart="58dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtPropina"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="44dp"
        android:text="TOTAL:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="20sp" />

    <TextView
        android:id="@+id/nroTotal"
        android:layout_width="165dp"
        android:layout_height="27dp"
        android:layout_marginStart="188dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="20sp"
        tools:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>